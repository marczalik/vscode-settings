{
    // color theme
    "editor.tokenColorCustomizations": {
        "comments": "#ffffff",
        "variables": "#FF0000",
        "textMateRules": [
            {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#FF0000"
                } 
            },
            {
                "scope": "source.python variable.parameter",
                "settings": {
                    "foreground": "#FF0000",
                }
            },
            {
                "scope": "meta.function-call.python",
                "settings": {
                    "foreground": "#008cff",
                }
            },
            {
                "scope": "meta.function-call.arguments.python",
                "settings": {
                    "foreground": "#20f0ff",
                }
            },
            {
                "scope": "source.python",
                "settings": {
                    "foreground": "#E5C07B",
                }
            },
            {
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#98C379",
                }
            }
        ]
    },
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.preferredDarkColorTheme": "Atom One Dark",
    "workbench.colorCustomizations": {
        "terminal.foreground": "#ABB2BF",
        "terminal.background": "#1E2127",
        "terminal.selectionBackground": "#b5b9c03b",
        "terminalCursor.background": "#5C6370",
        "editor.selectionBackground": "#ffe100a0",
        "editor.background": "#080d14",
        "tab.activeBackground": "#ff00005d",
        "editorWhitespace.foreground": "#ffffff74",
    },
    // editor
    // "editor.lineNumbers": "relative",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        72,
        79,
        100
    ],
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.renameOnType": true,
    "editor.formatOnType": true,
    "editor.detectIndentation": true,
    // "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 119,
    "editor.wrappingIndent": "indent",
    // fonts
    "editor.fontSize": 14,
    "editor.fontFamily": "Inconsolata, Consolas, 'Courier New', monospace",
    // files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/*.pyc": true,
        "**/__pycache__": true
    },
    "files.autoSave": "onWindowChange",
    // terminal

    // "terminal.integrated.shell.windows": 
    // "terminal.integrated.shellArgs.windows": [
    //     "-i"
    // ],
    // "terminal.integrated.env.windows": {
    //     "PATH": 
    // },
    // telemetry
    "telemetry.enableTelemetry": false,
    // python
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    // "python.jediEnabled": false,
    // "python.languageServer": "Pylance",
    // "[python]": {"editor.defaultFormatter": "ms-python.black-formatter"},
    // "python.formatting.provider": "black",
    // "python.formatting.blackArgs": ["--line-length", "100", "--preview"],
    // interpretter paths
    // "workbench.settings.editor": "json",
    "window.titleBarStyle": "custom",
    // vim
    "vim.startInInsertMode": false,
    "vim.useCtrlKeys": true,
    "vim.overrideCopy": false,
    "vim.useSystemClipboard": true,
    "vim.leader": " ",
    "vim.easymotion": true,
    "vim.easymotionMarkerYOffset": 4,
    "vim.hlsearch": true,
    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "after": [">", "g", "v"]
        },
        {
            "before": ["<"],
            "after": ["<", "g", "v"]
        }
    ],
    // live server
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // color highlight
    "color-highlight.markerType": "dot-before",
    // Unknown
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    // C/C++
    "C_Cpp.updateChannel": "Insiders",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "git.ignoreLegacyWarning": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    // Explorer
    "explorer.autoReveal": false,
    // neovim
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/vscode-nvim",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    // HTML
    "html.autoClosingTags": false,
    // Haskell
    "haskell.trace.server": "messages",
    "haskell.trace.client": "debug",
    "haskell.manageHLS": "GHCup",
    "svelte.ask-to-enable-ts-plugin": false,
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "switch:command",
        "stash-push:command"
    ],
    // Diffing
    "diffEditor.ignoreTrimWhitespace": false,
}
